<macro>
  <display-name>Twitter macro</display-name>
  <description>Insert a single Tweet into your article or website</description>
  <form>
    <input name="url" type="TextLine">
      <label>Url</label>
      <occurrences minimum="1" maximum="1"/>
    </input>
    <input name="lang" type="TextLine">
      <label>Language</label>
      <occurrences minimum="0" maximum="1"/>
    </input>
  </form>
</macro>